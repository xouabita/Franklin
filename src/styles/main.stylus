@import url(http://weloveiconfonts.com/api/?family=fontawesome)

$background  = #e7e7e7
$paper       = #fff
$ink         = #000

body
	width 100%
	max-width 600px
	margin 0 auto 0 auto
	background-color $background
.editor
	background-color $paper
	color $ink
	width 100%
	height 100%
	resize none
	border none
	font-size 18px
	&:focus
		outline none